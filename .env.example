S3_BUCKET="<string: AWS Bucket name>"
GOOGLE_CLIENT_ID="<string: Google client id>"
GOOGLE_CLIENT_SECRET="<string: Google client secret>"
GOOGLE_REDIRECT_URI="<string: Google redirect url>"
GOOGLE_STATE="<string: Google state>"
JWT_SECRET="<string: JWT secret used for signing>"
RECAPTCHA_SECRET="<string: Google Recaptcha site secret>"
